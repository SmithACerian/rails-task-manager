<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
         <i class="far fa-check-square"></i>
    <% else %>
         <i class="far fa-square"></i>
    <% end %>


<%= link_to 'Back to tasks', tasks_path, class:"style"  %>
<%= link_to 'Edit this task', edit_task_path, class:"style" %>

<%= link_to "Delete #{@task.title}",
            task_path,
            class:"style",
            method: :delete,
            data: { confirm: "Are you sure?" } %>

